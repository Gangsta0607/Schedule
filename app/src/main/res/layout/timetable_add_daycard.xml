<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#04FFFFFF"
    app:cardElevation="2sp"
    android:clickable="true"
    android:layout_margin="16sp"
    android:focusable="true">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_margin="16.0sp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="HardcodedText">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/day_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/if_add_day"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <CheckBox
            android:id="@+id/if_add_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/day_name"
            android:checked="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/subjects_on_addcard"
        android:orientation="vertical">

        <include layout="@layout/subject_part_for_adding" android:id="@+id/sbj1"/>
        <include layout="@layout/subject_part_for_adding" android:id="@+id/sbj2"/>
        <include layout="@layout/subject_part_for_adding" android:id="@+id/sbj3"/>
        <include layout="@layout/subject_part_for_adding" android:id="@+id/sbj4"/>
        <include layout="@layout/subject_part_for_adding" android:id="@+id/sbj5"/>
    </LinearLayout>
</LinearLayout>
</com.google.android.material.card.MaterialCardView>